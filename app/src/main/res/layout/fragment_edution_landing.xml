<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="toolbarText"
            type="String" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".fragment.EdutionLandingFragment">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dimen_12dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dimen_12dp"
                    android:layout_marginEnd="@dimen/_8ssp"
                    app:cardBackgroundColor="#C4EAC9"
                    app:cardCornerRadius="@dimen/dimen_20dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/gray_E2E2E2"
                    app:strokeWidth="@dimen/dimen_2dp"
                    android:layout_height="@dimen/dp_100">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/courseName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:textColor="#2B966F"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_26dp"
                        android:textSize="@dimen/sp_24"
                        app:fontFamily="@font/gilroy_bold"
                        android:text="42" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:textColor="#2B966F"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:textSize="@dimen/dimen_13sp"
                        android:layout_marginBottom="@dimen/dp_21"
                        app:fontFamily="@font/open_sans_semibold"
                        android:text="@string/total_users" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/_12ssp"
                    app:cardBackgroundColor="#CFF2FE"
                    app:cardCornerRadius="@dimen/dimen_20dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/gray_E2E2E2"
                    app:strokeWidth="@dimen/dimen_2dp"
                    android:layout_height="@dimen/dp_100">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:textColor="#051568"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_25dp"
                        android:textSize="@dimen/sp_24"
                        app:fontFamily="@font/gilroy_bold"
                        android:text="88" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:textColor="#051568"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:textSize="@dimen/dimen_13sp"
                        android:layout_marginBottom="@dimen/dp_21"
                        app:fontFamily="@font/open_sans_semibold"
                        android:text="@string/total_book_demo" />

                </com.google.android.material.card.MaterialCardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dimen_12dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dimen_12dp"
                    android:layout_marginEnd="@dimen/_8ssp"
                    app:cardBackgroundColor="#FFE7D9"
                    app:cardCornerRadius="@dimen/dimen_20dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/gray_E2E2E2"
                    app:strokeWidth="@dimen/dimen_2dp"
                    android:layout_height="@dimen/dp_100">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:textColor="#54090E"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_25dp"
                        android:textSize="@dimen/sp_24"
                        app:fontFamily="@font/gilroy_bold"
                        android:text="1200" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:textColor="#54090E"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:textSize="@dimen/dimen_13sp"
                        android:layout_marginBottom="@dimen/dp_21"
                        app:fontFamily="@font/open_sans_semibold"
                        android:text="@string/total_users_rating" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/_12ssp"
                    app:cardBackgroundColor="#F9DFE8"
                    app:cardCornerRadius="@dimen/dimen_20dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/gray_E2E2E2"
                    app:strokeWidth="@dimen/dimen_2dp"
                    android:layout_height="@dimen/dp_100">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:textColor="#AE184A"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_25dp"
                        android:textSize="@dimen/sp_24"
                        app:fontFamily="@font/gilroy_bold"
                        android:text="2800" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:textColor="#AE184A"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:textSize="@dimen/dimen_13sp"
                        android:layout_marginBottom="@dimen/dp_21"
                        app:fontFamily="@font/open_sans_semibold"
                        android:text="@string/total_courses_sale" />

                </com.google.android.material.card.MaterialCardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dimen_12dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dimen_12dp"
                    android:layout_marginEnd="@dimen/_8ssp"
                    app:cardBackgroundColor="#FFF8CD"
                    app:cardCornerRadius="@dimen/dimen_20dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/gray_E2E2E2"
                    app:strokeWidth="@dimen/dimen_2dp"
                    android:layout_height="@dimen/dp_100">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:textColor="#A47214"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_25dp"
                        android:textSize="@dimen/sp_24"
                        app:fontFamily="@font/gilroy_bold"
                        android:text="1200" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:textColor="#A47214"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:textSize="@dimen/dimen_13sp"
                        android:layout_marginBottom="@dimen/dp_21"
                        app:fontFamily="@font/open_sans_semibold"
                        android:text="@string/total_users_rating" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/_12ssp"
                    app:cardBackgroundColor="#C4EAC9"
                    app:cardCornerRadius="@dimen/dimen_20dp"
                    app:cardElevation="0dp"
                    android:visibility="invisible"
                    app:strokeColor="@color/gray_E2E2E2"
                    app:strokeWidth="@dimen/dimen_2dp"
                    android:layout_height="@dimen/dp_110">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:textColor="#2B966F"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_25dp"
                        android:textSize="@dimen/dimen_30dp"
                        app:fontFamily="@font/gilroy_bold"
                        android:text="2800" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:textColor="#2B966F"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:textSize="@dimen/dimen_14sp"
                        android:layout_marginBottom="@dimen/dp_25"
                        app:fontFamily="@font/open_sans_semibold"
                        android:text="@string/total_courses_sale" />

                </com.google.android.material.card.MaterialCardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/chart_image_sale"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:scaleType="fitXY"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</layout>