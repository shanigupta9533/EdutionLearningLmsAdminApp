<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EdutionLearningApp"  parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/quantum_purple</item>
        <item name="colorPrimaryVariant">@color/quantum_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/quantum_pink</item>
        <item name="colorSecondaryVariant">@color/quantum_pink</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/project_color_max</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/project_color</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        Customize your theme here.
    </style>

    <style name="Theme.VirtualMarket.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VirtualMarket.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

</resources>